{
    "name": "qbreader",
    "version": "7.6.2",
    "type": "module",
    "scripts": {
        "test": "mocha",
        "build": "npm run webpack && npm run sass && npm test",
        "dev": "npm run build && npm run start",
        "start": "node index.js",
        "sass": "sass scss/light.scss client/bootstrap/light.css && sass scss/dark.scss client/bootstrap/dark.css",
        "lint": "npx semistandard --fix",
        "test:frontend": "",
        "test:backend": "mocha test/database.test.js",
        "test:all": "npm run test:frontend && npm run test:backend",
        "webpack": "webpack --config webpack.config.js",
        "webpack-watch": "webpack --config webpack.config.js --watch"
    },
    "dependencies": {
        "bootstrap": "5.2.3",
        "bootstrap-icons": "^1.13.1",
        "cookie-session": "^2.0.0",
        "cors": "^2.8.5",
        "dompurify": "^3.0.0",
        "dotenv": "^16.0.1",
        "express": "^4.19.2",
        "express-ipfilter": "^1.3.1",
        "express-rate-limit": "^6.7.0",
        "jsdom": "^21.1.0",
        "jsonwebtoken": "^9.0.0",
        "mongodb": "^6.17.0",
        "morgan": "^1.10.0",
        "nodemailer": "^6.9.13",
        "qb-answer-checker": "^1.1.7",
        "stripe": "^12.10.0",
        "uuid": "^8.3.2",
        "ws": "^8.8.0"
    },
    "devDependencies": {
        "@babel/core": "^7.20.2",
        "@babel/preset-react": "^7.18.6",
        "babel-loader": "^10.0.0",
        "chai": "^4.3.7",
        "mocha": "^11.6.0",
        "sass": "^1.56.2",
        "semistandard": "^17.0.0",
        "webpack": "^5.100.2",
        "webpack-cli": "^6.0.1"
    },
    "semistandard": {
        "globals": [
            "$",
            "bootstrap",
            "React",
            "ReactDOM"
        ],
        "ignore": [
            "client/bootstrap/*"
        ]
    }
}
